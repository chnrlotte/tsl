{% comment %}
  This is a sample product page for a single product
{% endcomment %}

{% assign product = all_products['monday-rug'] %}

{% for image in product.images %}
  <img src="{{ image.src | img_url }}" alt="{{ product.title }} - {{ image.alt | escape }}">
{% endfor %}

<img src="{{ product.featured_image | img_url }}" alt="{{ product.title }} - {{ image.alt | escape }}">

{{ product.title }}

<p class="product-price">{{ product.price | money }}</p>

<!-- product form -->
{% form 'product', product %}
  <!-- form content -->
  <select name="id" id="variant-select">
    {% for variant in product.variants %}
      <option value="{{ variant.id }}" data-variant-price="{{ variant.price }}">
        {{ variant.title }} - {{ variant.price | money }}
      </option>
    {% endfor %}
  </select>

  <input type="text" name="quantity" min="1" value="1">

  <input type="submit" value="Add to cart">
  {{ form | payment_button }}
{% endform %}

<script>
  var variantPriceData = {{ product.variants | json }};
  var variantSelect = document.getElementById('variant-select');
  var productPrice = document.querySelector('.product-price');

  variantSelect.addEventListener('change', function() {
    var selectedVariantId = variantSelect.value;
    var selectedVariant = variantPriceData.find(function(variant) {
      return variant.id === selectedVariantId;
    });
    productPrice.textContent = Shopify.formatMoney(selectedVariant.price, '{{ shop.currency }}');
  });
</script>


