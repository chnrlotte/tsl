<div class="apple">
  <div class="header-logo">the sunday loft</div>
  <div class="header-nav">
    <ul>
      {% for link in linklists['main-menu'].links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="header-icons">
    <img src="{{ 'icon-feather-user.png' | asset_url }}" alt="User Icon">
    <img src="{{ 'icon-feather-search.png' | asset_url }}" alt="Search Icon">
    <img src="{{ 'icon-feather-shopping-bag.png' | asset_url }}" alt="Cart Icon">
  </div>
</div>

<style>
  .apple {
    display: flex;
    {% comment %} align child elements vertically {% endcomment %}
    align-items: center;
    {% comment %} spacing on left and right {% endcomment %}
    padding: 0 12.5%;
    height: 9.09vh;
  }

  {% comment %} target child divs except the last {% endcomment %}
  .apple > div:not(:last-child) {
    margin-right: 5%;
  }

  .header-logo {
    font-family: p22-typewriter, sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 1.3rem;
  }

  .header-nav {
    {% comment %} allow div to occupy remaining space in parent {% endcomment %}
    flex: 1;
  }

  .header-nav ul {
    {% comment %} remove bullet points {% endcomment %}
    list-style: none;
    padding: 0;
    text-transform: uppercase;
    letter-spacing: 0.169rem;
    font-size: 2rem;
    font-family: roboto, sans-serif;
    font-weight: 500;
    font-style: normal;
  }

  .header-nav li {
    {% comment %} make list horizontal {% endcomment %}
    display: inline-block;
  }

  .header-nav a {
    text-decoration: none;
    color: #434342;
  }

  {% comment %} target li except the last {% endcomment %}
  .header-nav li:not(:last-child){
    margin-right: 5%;
  }

  .header-icons {
    display: flex;
    {% comment %} position on the right of parent div {% endcomment %}
    margin-left: auto;
  }

  .header-icons img {
    max-height: 1.3rem;
    max-width: 1.3rem;
    padding-right: 3rem;
  }

  .header-icons img:last-child {
    {% comment %} remove padding from the last icon {% endcomment %}
    padding-right: 0;
  }
</style>
